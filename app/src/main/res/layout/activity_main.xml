<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="VectorDrawableCompat"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/upperimage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="header"
        android:scaleType="fitXY"
        android:src="@drawable/header" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/image"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:elevation="3dp"
        android:contentDescription="lower"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logintext"
        android:text="LOGIN"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/upperimage"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <EditText
        android:id="@+id/ide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upperimage"
        android:drawableStart="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPersonName"
        android:background="@drawable/coustum_input"


        android:layout_marginTop="52dp"
        android:hint="id"
        android:textColorHint="#070707" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ide"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:background="@drawable/coustum_input"

        android:drawablePadding="12dp"
        android:layout_marginTop="31dp"

        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:textColorHint="#0B0A0A" />

    <Button
        android:id="@+id/button"
        android:layout_width="332dp"
        android:layout_height="80dp"
        android:layout_above="@+id/image"
        android:layout_below="@+id/pass"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/coustum_bt"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="-5dp"
        android:text="LOGIN" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar

            android:id="@+id/kk"
            android:layout_width="131dp"
            android:layout_height="93dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"></ProgressBar>
    </RelativeLayout>
</RelativeLayout>




